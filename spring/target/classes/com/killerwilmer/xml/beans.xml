<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean id="mundo" class="com.killerwilmer.beans.Mundo">
	<property name="saludo" value="Hola Mundo!"></property>
</bean>

<bean id="persona" class="com.killerwilmer.beans.Persona">
	<constructor-arg value="1"></constructor-arg>
	<constructor-arg value="Wilmer"></constructor-arg>
	<constructor-arg value="Killerwilmer"></constructor-arg>
</bean>

</beans>
