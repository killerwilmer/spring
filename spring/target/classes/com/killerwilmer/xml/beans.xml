<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="mundo" class="com.killerwilmer.beans.Mundo">
		<property name="saludo" value="Hola Mundo!"></property>
	</bean>

	<bean id="persona" class="com.killerwilmer.beans.Persona" name="personaBean">
		<property name="pais" ref="pais"></property>
		<property name="id" value="1"></property>
		<property name="nombre" value="Wilmer"></property>
		<property name="apodo" value="Killerwilmer"></property>
	</bean>

	<bean id="pais" class="com.killerwilmer.beans.Pais">
		<property name="nombre" value="Colombia"></property>
		<property name="ciudades">
			<list>
				<ref bean="ciudad1"/>
				<ref bean="ciudad2"/>
				<ref bean="ciudad3"/>
			</list>
		</property>
	</bean>

	<bean id="ciudad1" class="com.killerwilmer.beans.Ciudad">
		<property name="nombre" value="BogotÃ¡"></property>
	</bean>
	
	<bean id="ciudad2" class="com.killerwilmer.beans.Ciudad">
		<property name="nombre" value="Medellin"></property>
	</bean>
	
	<bean id="ciudad3" class="com.killerwilmer.beans.Ciudad">
		<property name="nombre" value="Cali"></property>
	</bean>

</beans>
